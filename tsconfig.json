{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "NodeNext",
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    //"strict": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
